<h1>Add a city</h1>

<form action="/cities" method="POST">


  <label for="city">City:</label>
  <input required type="text" placeholder="e.g. Miami" id="city" name="name">
  <br>
  <br>
  <div class="form-el">
      <label for="country_select">Select Country:</label>
      <select name="country_id" id="country_select">
        <% @countries.each do |country| %>
            <option value=<%= country.id %>><%= country.name.capitalize %></option>
        <% end %>
      </select>
    </div>
  <input type="radio" name="visited" value="t" id="t">
  <label for="t">Add to visited</label>
  <input type="radio" name="visited" value="f" id="f">
  <label for="f">Add to wishlist</label>


<br>

  <button type="Submit">Submit</button>

</form>
